<script>
/* ðŸ’• Floating hearts */
setInterval(() => {
  const heart = document.createElement("div");
  heart.className = "heart";
  heart.textContent = "â¤ï¸";
  heart.style.left = Math.random() * 100 + "vw";
  heart.style.fontSize = Math.random() * 18 + 18 + "px";
  document.body.appendChild(heart);
  setTimeout(() => heart.remove(), 6000);
}, 600);

let userName = "";
let crushName = "";
let willScale = 1;
let finalSentence = "";

function start() {
  userName = document.getElementById("userName").value || "You";
  crushName = document.getElementById("crushName").value || "Me";

  document.getElementById("main").innerHTML = `
    <h1>
      <button id="will">Will</button>
      you be my Valentine? ðŸ’–
    </h1>
    <button id="yes">Yes</button>
    <div id="preview"></div>
  `;

  setupButtons();
}

function setupButtons() {
  const willBtn = document.getElementById("will");
  const yesBtn = document.getElementById("yes");

  yesBtn.addEventListener("mouseenter", moveYes);
  yesBtn.addEventListener("touchstart", moveYes);

  function moveYes() {
    yesBtn.style.left = Math.random() * 220 + "px";
    yesBtn.style.top = Math.random() * 160 + "px";
    willScale += 0.35;
    willBtn.style.transform = `scale(${willScale})`;
  }

  willBtn.addEventListener("click", startWords);
}

function startWords() {
  const main = document.getElementById("main");

  main.innerHTML = `
    <h1>Tap to finish the question ðŸ’Œ</h1>
    <div id="preview"></div>
  `;

  const preview = document.getElementById("preview");
  const words = ["will", "you", "be", "my", "valentine"];
  let index = 0;
  let sentence = [];

  const btn = document.createElement("button");
  btn.className = "word-btn";
  btn.textContent = words[index];
  main.appendChild(btn);

  btn.addEventListener("click", () => {
    sentence.push(words[index]);
    preview.textContent = sentence.join(" ");

    index++;
    if (index < words.length) {
      btn.textContent = words[index];
    } else {
      finalSentence = sentence.join(" ");
      showFinal();
    }
  });
}

function showFinal() {
  document.getElementById("main").innerHTML = `
    <h1>ðŸ’–</h1>
    <p><strong>${userName}:</strong><br>${finalSentence}</p>
    <p><strong>${crushName}:</strong><br>wowâ€¦ I am flattered ðŸ’•<br>and I accept ðŸ’˜</p>
    <button id="shareBtn" onclick="shareResult()">Share ðŸ’Œ</button>
  `;
}

function shareResult() {
  const text = `${userName}: ${finalSentence}\n\n${crushName}: wowâ€¦ I am flattered and I accept ðŸ’˜`;

  if (navigator.share) {
    navigator.share({
      title: "Valentine ðŸ’–",
      text: text,
      url: window.location.href
    });
  } else {
    alert("Sharing is not supported on this device ðŸ’”");
  }
}
</script>

